#include <iostream>
#include <string>
//25 variant
int main()
{
    std::string U;
    std::getline(std::cin, U);

    int LA[26];
    for (int i = 0; i < 26; ++i) LA[i] = 0;
    int ALL = 0;
    for (int i = 0; i < U.length(); ++i) {
        if ((U[i] >= 65) && (U[i] <= 90)) {
            LA[U[i] - 65] ++;
            ALL++;
        }
    }
    for (int i = 0; i < 26; ++i) {
        std::cout << char(i + 65) << ":" << LA[i] << " iz " << ALL << ". частота = " << LA[i] * 1.0 / ALL * 100 << std::endl;
    }
             if (U[i] == 'E') U[i] = 'X';//
        else if (U[i] == 'T') U[i] = 'Z';//f
        else if (U[i] == 'A') U[i] = 'Q';//
        else if (U[i] == 'O') U[i] = 'U';//
        else if (U[i] == 'I') U[i] = 'V';//
        else if (U[i] == 'N') U[i] = 'C';//
        else if (U[i] == 'S') U[i] = 'H';//
        else if (U[i] == 'H') U[i] = 'Y';//
        else if (U[i] == 'R') U[i] = 'T';//
        else if (U[i] == 'D') U[i] = 'F';//
        else if (U[i] == 'L') U[i] = 'P';//w
        else if (U[i] == 'C') U[i] = 'A';//
        else if (U[i] == 'U') U[i] = 'E';//
        else if (U[i] == 'M') U[i] = 'M';//
        else if (U[i] == 'W') U[i] = 'K';//
        else if (U[i] == 'F') U[i] = 'S';//
        else if (U[i] == 'G') U[i] = 'N';//
        else if (U[i] == 'Y') U[i] = 'R';//
        else if (U[i] == 'P') U[i] = 'W';//
        else if (U[i] == 'B') U[i] = 'D';//
        else if (U[i] == 'V') U[i] = 'J';//k//n//вероятно нет
        else if (U[i] == 'K') U[i] = 'B';//E//m
        else if (U[i] == 'J') U[i] = 'G';//
        else if (U[i] == 'X') U[i] = 'O';//
        else if (U[i] == 'Q') U[i] = 'I';//
        else if (U[i] == 'Z') U[i] = 'L';//
    }
    std::cout << U;
    return 0;
}
